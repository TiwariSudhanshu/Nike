<%- include("./boiler.ejs") %>
<%- include("./header.ejs") %>
<link rel="stylesheet" href="./files/shoeCategoryPage.css">
<div class="main-content">
    <%- include("./sidebar.ejs") %>
    <div class="content">
        <% for(let product of Object.values(shoeData)) { %>
            <form action="https://nike-grxy.onrender.com/shoes/shoe/<%=product.id%>">
                <button type="submit" style="background: none; border: none; padding: 0;">
              <div class="shoe-each">
                <img src="<%= product.image %>" alt="<%= product.name %>">
                <h4><%= product.name %></h4>
                <p><%= product.category.charAt(0).toUpperCase() + product.category.slice(1).toLowerCase();%>'s Shoes</p>
                <h3>MRP : &#8377;<%= product.price %></h3>
              </div>
              </button></form>
            <% } %>
    </div>
</div>
<%- include("./footer.ejs") %>

